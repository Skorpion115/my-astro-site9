---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPageUrl } from "../../utils/getPageUrl.js";

// Meta-Infos für die Seite
const pageTitle = "The Lion Sleeps Tonight – Noten komplettes Arrangement kaufen";
const description =
  "Kaufe die Noten & Tabulatur für ‚The Lion Sleeps Tonight‘ direkt hier. Nach der Zahlung erhältst du Zugriff auf die Downloads.";
const keywords = "The Lion Sleeps Tonight, Noten, komplettes Arrangement kaufen, PDF";
const pageUrl = getPageUrl(Astro);

// URL der Dankeseite nach PayPal-Zahlung
const returnUrl =
  "https://www.musicstudio-ziebart.de/kunden-login/thanks-the-lion-sleeps-tonight/";
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="website"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <img
    src="/bilder/The_Lion_Sleeps_Tonight-Vorschau.jpg"
    alt="The Lion Sleeps Tonight – Vorschau"
    class="product-image"
  />

  <p>
    Nach der Zahlung erhältst du sofortigen Zugriff auf die PDF Downloads. <br />
    Perfekt für Gitarristen, die den Song lernen möchten! <br />
    Preis: <strong>4,95&nbsp;€</strong>
  </p>

  <p>
    Dieses Arrangment ist als
    <strong
      >didaktisch aufbereitetes Unterrichtsmaterial für den Gitarrenunterricht</strong
    >
    konzipiert und eignet sich ideal zum Lernen und Vertiefen des Songs.
  </p>

  <p>
    Sichere dir meine
    <strong>eigenen Noten &amp; Pattern für Akustikgitarre, Chor + Bass</strong>
    zum Song „The Lion Sleeps Tonight“ – speziell erstellt für den Unterricht und das Selbststudium.
  </p>

  <p class="small">
    Preis: <strong>4,95&nbsp;€</strong> (gemäß § 19 UStG umsatzsteuerfrei)
  </p>

  <p class="small">
    Hinweis: Bei digitalen Downloads erlischt das Widerrufsrecht mit Beginn des
    Downloads.
  </p>

  <form
    action="https://www.paypal.com/cgi-bin/webscr"
    method="post"
    target="_top"
  >
    <input type="hidden" name="cmd" value="_xclick" />
    <input type="hidden" name="business" value="musikstudio.ziebart@gmail.com" />
    <input
      type="hidden"
      name="item_name"
      value="The Lion Sleeps Tonight – Noten & Pattern"
    />
    <input type="hidden" name="amount" value="4.95" />
    <input type="hidden" name="currency_code" value="EUR" />
    <input type="hidden" name="no_shipping" value="1" />
    <input type="hidden" name="charset" value="utf-8" />
    <input type="hidden" name="lc" value="DE" />
    <input type="hidden" name="return" value={returnUrl} />


    <button type="submit" class="cta-button"> Jetzt mit PayPal kaufen </button>
  </form>

  <p class="normal-links">
    Bei PayPal-Problemen auf dem iPhone bitte die Seite im normalen Safari-Browser öffnen.
  </p>

  <p>
    Falls es Probleme mit dem Download gibt, schreib mir bitte eine kurze
    E-Mail: <br />
    <strong>postmaster@musicstudio-ziebart.de</strong>
  </p>
</BaseLayout>